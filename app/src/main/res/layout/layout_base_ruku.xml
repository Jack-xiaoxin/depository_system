<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mainBg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rel_reset_bypsw"
        android:layout_width="match_parent"
        android:layout_height="@dimen/itemCardAddHeight"
        android:background="@color/colorTextWhite"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="*仓库"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />

        <com.example.depository_system.view.DeleteEditText
            android:id="@+id/depot_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:focusableInTouchMode="true"
            android:gravity="right|center_vertical"
            android:hint="@string/hint_input_depository"
            android:inputType="text"
            android:autoSizeTextType="uniform"
            android:paddingRight="@dimen/card_add_item_margin_right"
            android:textColor="@color/colorTextCardAddEdittext"
            android:textColorHint="@color/colorTextHint"
            android:textSize="15dp"/>

        <ImageButton
            android:id="@+id/image_btn_depotName"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_right_arrow"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rel_choose_bank"
        android:layout_width="match_parent"
        android:layout_height="@dimen/itemCardAddHeight"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:background="@drawable/ripple_item_white_bg"
        android:clickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="@string/ruku_input_material_identifier"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp" />

        <com.example.depository_system.view.DeleteEditText
            android:id="@+id/material_identifier"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:focusableInTouchMode="true"
            android:gravity="right|center_vertical"
            android:hint="@string/hint_input_material_identifier"
            android:inputType="text"
            android:maxLines="3"
            android:paddingRight="@dimen/card_add_item_margin_right"
            android:textColor="@color/colorTextCardAddEdittext"
            android:textColorHint="@color/colorTextHint"
            android:textSize="15dp" />

        <ImageButton
            android:id="@+id/image_btn_materialIdentifier"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_right_arrow"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="@color/mainBg" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/itemCardAddHeight"
        android:background="@color/colorTextWhite"
        android:clickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="@string/ruku_material_name"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp" />

        <com.example.depository_system.view.DeleteEditText
            android:id="@+id/material_name"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:focusableInTouchMode="true"
            android:gravity="right|center_vertical"
            android:hint="@string/hint_input_material_name"
            android:inputType="text"
            android:paddingRight="@dimen/card_add_item_margin_right"
            android:textColor="@color/colorTextCardAddEdittext"
            android:textColorHint="@color/colorTextHint"
            android:textSize="15dp" />

        <ImageButton
            android:id="@+id/image_btn_materialName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_right_arrow"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="@color/mainBg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/itemCardAddHeight"
        android:background="@color/colorTextWhite"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="@string/ruku_input_material_type"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />

        <com.example.depository_system.view.DeleteEditText
            android:id="@+id/material_type"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:hint="@string/hint_input_material_type"
            android:maxLines="3"
            android:paddingRight="@dimen/card_add_item_margin_right"
            android:textColor="@color/colorTextCardAddEdittext"
            android:textColorHint="@color/colorTextHint"
            android:textSize="15dp" />

        <ImageButton
            android:id="@+id/image_btn_materialType"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_right_arrow"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="@color/mainBg" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="30dp"
        android:background="@color/mainBg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/itemCardAddHeight"
        android:background="@color/colorTextWhite"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="@string/ruku_input_material_num"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp" />

        <com.example.depository_system.view.DeleteEditText
            android:id="@+id/material_num"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:focusableInTouchMode="false"
            android:gravity="right|center_vertical"
            android:hint="@string/hint_input_material_num"
            android:inputType="number"
            android:maxLength="18"
            android:paddingRight="@dimen/card_add_item_margin_right"
            android:textColor="@color/colorTextCardAddEdittext"
            android:textColorHint="@color/colorTextHint"
            android:textSize="15sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/itemCardAddHeight"
        android:background="@color/colorTextWhite"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="@string/ruku_input_material_unit"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />

        <com.example.depository_system.view.DeleteEditText
            android:id="@+id/material_unit"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:hint="@string/hint_input_material_unit"
            android:maxLines="3"
            android:paddingRight="@dimen/card_add_item_margin_right"
            android:textColor="@color/colorTextCardAddEdittext"
            android:textColorHint="@color/colorTextHint"
            android:textSize="15dp" />

        <ImageButton
            android:id="@+id/image_btn_materialUnit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_right_arrow"/>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="30dp"
        android:background="@color/mainBg" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/itemCardAddHeight"
        android:background="@color/colorTextWhite"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="@string/ruku_input_factory_name"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp" />

        <com.example.depository_system.view.DeleteEditText
            android:id="@+id/factory_name"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:focusableInTouchMode="false"
            android:gravity="right|center_vertical"
            android:hint="@string/hint_input_factory_name"
            android:inputType="text"
            android:maxLines="3"
            android:paddingRight="@dimen/card_add_item_margin_right"
            android:textColor="@color/colorTextCardAddEdittext"
            android:textColorHint="@color/colorTextHint"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/image_btn_factoryName"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_right_arrow"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/itemCardAddHeight"
        android:background="@color/colorTextWhite"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="@string/ruku_input_time"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp" />

        <com.example.depository_system.view.DeleteEditText
            android:id="@+id/ruku_time"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:focusableInTouchMode="false"
            android:gravity="right|center_vertical"
            android:hint="@string/hint_input_ruku_time"
            android:inputType="time"
            android:maxLength="18"
            android:paddingRight="@dimen/card_add_item_margin_right"
            android:textColor="@color/colorTextCardAddEdittext"
            android:textColorHint="@color/colorTextHint"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/image_btn_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_right_arrow"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/itemCardAddHeight"
        android:background="@color/colorTextWhite"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="@string/ruku_project_name"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp" />

        <com.example.depository_system.view.DeleteEditText
            android:id="@+id/project_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:layout_centerVertical="true"
            android:background="@null"
            android:focusableInTouchMode="false"
            android:gravity="right|center_vertical"
            android:hint="@string/hint_input_project_name"
            android:inputType="text"
            android:maxLines="3"
            android:paddingRight="@dimen/card_add_item_margin_right"
            android:textColor="@color/colorTextCardAddEdittext"
            android:textColorHint="@color/colorTextHint"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/image_btn_project"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_right_arrow"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/itemCardAddHeight"
        android:background="@color/colorTextWhite"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="@string/ruku_receiver_name"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp" />

        <com.example.depository_system.view.DeleteEditText
            android:id="@+id/receiver_name"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@null"
            android:focusableInTouchMode="false"
            android:gravity="right|center_vertical"
            android:hint="@string/hint_ruku_receiver_name"
            android:inputType="text"
            android:paddingRight="@dimen/card_add_item_margin_right"
            android:textColor="@color/colorTextCardAddEdittext"
            android:textColorHint="@color/colorTextHint"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/image_btn_receiver"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_right_arrow"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/itemCardAddHeight"
        android:background="@color/colorTextWhite"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="@string/ruku_accepter_name"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp" />

        <com.example.depository_system.view.DeleteEditText
            android:id="@+id/accepter_name"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@null"
            android:focusableInTouchMode="false"
            android:gravity="right|center_vertical"
            android:hint="@string/hint_ruku_accepter_name"
            android:inputType="text"
            android:maxLength="18"
            android:paddingRight="@dimen/card_add_item_margin_right"
            android:textColor="@color/colorTextCardAddEdittext"
            android:textColorHint="@color/colorTextHint"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/image_btn_accepter"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_right_arrow"/>

    </LinearLayout>


</LinearLayout>
