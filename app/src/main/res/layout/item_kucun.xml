<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:paddingBottom="10dp"
    android:background="@drawable/text_card_bg"
    android:clickable="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/kucun_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/kucun_material_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/kucun_image"
        android:layout_marginLeft="15dp"
        android:layout_toEndOf="@+id/kucun_image"
        android:layout_toRightOf="@+id/kucun_image"
        android:text="物资名称：XXXX"
        android:textColor="@color/colorKucunText"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/kucun_material_identifier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/kucun_material_name"
        android:layout_alignRight="@id/kucun_material_name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="21dp"
        android:paddingLeft="11dp"
        android:paddingRight="11dp"
        android:text="物料编码：XXXXXXXXXXX"
        android:textColor="@color/colorKucunText"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/kucun_material_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kucun_material_name"
        android:layout_marginLeft="15dp"
        android:layout_toEndOf="@+id/kucun_image"
        android:layout_toRightOf="@+id/kucun_image"
        android:text="物资型号：XXXX XXXX XXXX XXXX"
        android:textColor="@color/colorKucunText"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/kucun_material_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/kucun_material_type"
        android:layout_alignRight="@id/kucun_material_type"
        android:layout_alignParentRight="true"
        android:layout_marginRight="21dp"
        android:paddingLeft="11dp"
        android:paddingRight="11dp"
        android:text="数量：XX"
        android:textColor="@color/colorKucunText"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/depository_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/kucun_material_type"
        android:layout_marginLeft="15dp"
        android:layout_toEndOf="@+id/kucun_image"
        android:layout_toRightOf="@+id/kucun_image"
        android:text="仓库：XXXXXXXX"
        android:textColor="@color/colorKucunText"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/kucun_alert_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/depository_name"
        android:layout_alignTop="@id/depository_name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="21dp"
        android:paddingLeft="11dp"
        android:paddingRight="11dp"
        android:text="预警值：XXXXXX"
        android:textColor="@color/colorKucunText"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/factory_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/depository_name"
        android:layout_marginLeft="15dp"
        android:layout_toEndOf="@+id/kucun_image"
        android:layout_toRightOf="@+id/kucun_image"
        android:text="厂家：XXXXXXXX"
        android:textColor="@color/colorKucunText"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/ruku_project"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/factory_name"
        android:layout_alignTop="@id/factory_name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="21dp"
        android:paddingLeft="11dp"
        android:paddingRight="11dp"
        android:text="入库项目：XXXXXX"
        android:textColor="@color/colorKucunText"
        android:textSize="14sp" />

</RelativeLayout>
